<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3F51B5"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="730dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Space
            android:layout_width="match_parent"
            android:layout_height="48dp" />

        <Button
            android:id="@+id/iconButton"
            style="?attr/materialIconButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#CFBBFE"
            android:backgroundTint="#CFBBFE"
            android:contentDescription="icono"
            android:paddingLeft="100px"
            android:scaleX="1.0"
            android:scaleY="1.0"
            android:text="Controlá cualquier cosa desde cualquier lado"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textDirection="locale"
            android:textSize="20sp"
            app:icon="@drawable/engineering_fill0_wght300_grad0_opsz24"
            app:iconGravity="textTop"
            app:iconSize="60dp"
            app:iconTint="@color/design_default_color_surface" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="44dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="160px">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textoUsuario"
                android:layout_width="298dp"
                android:layout_height="77dp"
                android:backgroundTint="#FFFFFF"

                android:baselineAligned="false"
                android:hint="Usuario"
                app:boxBackgroundMode="outline">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="297dp"
                    android:layout_height="wrap_content"

                    />

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="46dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="160px">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textoContrasenia"
                android:layout_width="match_parent"
                android:layout_height="75dp"

                android:backgroundTint="#FFFFFF"
                android:hint="Contraseña"
                app:boxStrokeColor="#FFFFFF"
                app:endIconMode="password_toggle">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="297dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"

                    />

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="131dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/botonIngresar"
                android:layout_width="66dp"
                android:layout_height="70dp"
                android:layout_marginLeft="100px"
                android:layout_marginRight="100px"
                android:layout_weight="1"
                android:text="Ingresar" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>