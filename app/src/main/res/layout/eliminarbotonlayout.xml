<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#494444"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="0dp"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/iconoDispositivo"
            style="?attr/materialIconButtonStyle"
            android:layout_width="59dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:paddingLeft="5dp"
            android:paddingBottom="15dp"
            android:pointerIcon="none"
            android:scaleType="center"
            android:scaleX="1"
            android:scaleY="1"
            android:textAlignment="textStart"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:cornerRadius="1dp"
            app:icon="@drawable/motion_sensor_active_fill0_wght300_grad0_opsz24"
            app:iconSize="45dp"
            app:iconTint="@color/white"
            app:iconTintMode="src_in" />

        <LinearLayout
            android:layout_width="251dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textViewDescripcion"
                android:layout_width="282dp"
                android:layout_height="wrap_content"
                android:maxLines="5"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/botonEliminarDispositivo"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="59dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:backgroundTint="#673AB7"
            android:insetLeft="1dp"
            android:pointerIcon="none"
            android:scaleType="center"
            android:scaleX="1"
            android:scaleY="1"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:cornerRadius="20dp"
            app:icon="@drawable/delete_fill0_wght300_grad0_opsz24"
            app:iconSize="35dp"
            app:iconTint="@color/white"
            app:iconTintMode="src_in" />
    </LinearLayout>

    <View style="@style/Divider" />
</LinearLayout>
